<h1 style="font-size: 16px; font-weight: bold; background: #B45F04; border: 1px solid #B45F04; color: #fff; padding: 10px; margin-bottom: 5px;">
    <%= @release_log.title %> - <%= @release_log.project.name %> - <%= release_logs_label_for(:release_cancellation_notification) %>
</h1>
<br/>
<span style="font-size: 14px;">
    <%= release_logs_label_for(:release_cancellation_message,
                               :release_identifier => link_to("#{@release_log.id}", release_log_url(@release_log, :project_id => @release_log.project.identifier)),
                               :project_name => @release_log.project.name,
                               :date => format_time(@release_log.cancelled_at),
                               :user => @release_log.canceller.name).html_safe %>
</span>
<br/>
<br/>
<hr style="background: #FAAC58"/>
<br/>
<h1 style="font-size: 16px; font-weight: bold; color: #B45F04;">Cancellation reason</h1>
<%= release_log_textilizable @release_log, :cancellation_reason, @release_log.attachments %>
<br/>
